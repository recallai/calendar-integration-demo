<div class="overflow-hidden bg-white shadow sm:rounded-lg py-4 px-0 sm:px-4">
  <div class="px-4 sm:px-0">
    <div class="flex items-center">
      <h1 class="text-lg font-semibold leading-7 text-gray-900">
        Recording Preferences
      </h1>
    </div>
  </div>
  <div class="mt-4">
    <form method="POST" action="/calendar/<%= calendar.id %>">
      <input type="hidden" name="_method" value="PATCH">
      <div class="grid grid-cols-1 sm:grid-cols-1">
        <div class="relative flex items-start pb-4 pt-3.5 border-t border-gray-100">
          <div class="min-w-0 flex-1 text-sm leading-6">
            <label for="autoRecordExternalEvents" class="font-medium text-gray-900">Record External Events</label>
            <p id="autoRecordExternalEvents-description" class="text-gray-500">Automatically record all external meetings on this calendar.</p>
          </div>
          <div class="ml-3 flex h-6 items-center">
            <input id="autoRecordExternalEvents" <%= calendar.autoRecordExternalEvents ? "checked" : "" %> aria-describedby="autoRecordExternalEvents-description" name="autoRecordExternalEvents" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600">
          </div>
        </div>
        <div class="relative flex items-start pb-4 pt-3.5 border-t border-gray-100">
          <div class="min-w-0 flex-1 text-sm leading-6">
            <label for="autoRecordOnlyConfirmedEvents" class="font-medium text-gray-900">Record Only Confirmed Events</label>
            <p id="autoRecordOnlyConfirmedEvents-description" class="text-gray-500">Record only confirmed events on this calendar.</p>
          </div>
          <div class="ml-3 flex h-6 items-center">
            <input id="autoRecordOnlyConfirmedEvents" <%= calendar.autoRecordOnlyConfirmedEvents ? "checked" : "" %> aria-describedby="autoRecordOnlyConfirmedEvents-description" name="autoRecordOnlyConfirmedEvents" type="checkbox" class="h-4 w-4 rounded border-gray-300 text-indigo-600 focus:ring-indigo-600">
          </div>
        </div>
        <div class="relative flex items-start justify-end pt-3.5 border-t border-gray-100">
          <button class="relative inline-flex items-center rounded-sm bg-indigo-600 px-3 py-1 text-xs font-medium text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" type="submit">Save</button>
        </div>
      </div>
    </form>
  </div>
</div>
